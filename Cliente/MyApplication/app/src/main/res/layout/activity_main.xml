<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <EditText
        android:id="@+id/cantidadMesas"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cantidadSillas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0" />

    <EditText
        android:id="@+id/cantidadArmarios"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cantidadMesas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0" />

    <EditText
        android:id="@+id/cantidadEstanterias"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cantidadArmarios"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compra Muebles APP"
        tools:text="Compra Muebles APP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/button_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp" />

    <EditText
        android:id="@+id/cantidadSillas"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="106dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="220dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Mi pedido:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="107dp"
        android:layout_toEndOf="@+id/cantidadSillas"
        android:layout_toRightOf="@+id/cantidadSillas"
        android:text="silla/s"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="31dp"
        android:layout_toEndOf="@+id/cantidadSillas"
        android:layout_toRightOf="@+id/cantidadSillas"
        android:text="mesa/s"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/cantidadSillas"
        android:layout_toRightOf="@+id/cantidadSillas"
        android:text="armario/s"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="193dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/cantidadSillas"
        android:layout_toRightOf="@+id/cantidadSillas"
